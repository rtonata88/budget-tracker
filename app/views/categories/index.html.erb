<% if user_signed_in? %>
<div class="py-5">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
      <div class="mt-10">
      <% if @categories.count > 0 %>
        <dl class="space-y-10 md:space-y-0 md:grid md:grid-cols-2 md:gap-x-8 md:gap-y-10">
        <% @categories.each do |category| %>
          <%= render category %>
        <% end %>
        </dl>
      <% else %>
      <div class="lg:text-center">
        There are no categories defined. Please click on the button below
        </div>
      <% end %>
      </div>
    </div>
    <%= link_to "Add New category", new_category_path, class: "w-full flex items-center justify-center px-8 py-3 border border-transparent text-base font-medium text-white bg-green-600 hover:bg-green-700 md:py-4 sm:py-4 md:text-lg md:px-10 sm:px-10 uppercase" %>
  </div>
</div>
<% end %>
<% unless user_signed_in? %>
<main class="mt-10 mx-auto max-w-7xl px-4 sm:mt-12 sm:px-6 md:mt-16 lg:mt-20 lg:px-8 xl:mt-28">
        <div class="sm:text-center lg:text-left">
          <h1 class="text-4xl tracking-tight font-extrabold text-gray-900 sm:text-5xl md:text-6xl">
            <span class="block xl:inline">Improve your</span>
            <span class="block text-blue-800 xl:inline">spending patterns</span>
          </h1>
          <p class="mt-3 text-base text-gray-500 sm:mt-5 sm:text-lg sm:max-w-xl sm:mx-auto md:mt-5 md:text-xl lg:mx-0">Welcome to <span class="text-blue-600 strong">Budgeta</span>, an app to help you see where your money goes.</p>
          <div class="mt-5 sm:mt-8 sm:flex sm:justify-center lg:justify-start">
            <div class="rounded-md shadow">
              <a href="/users/sign_in" class="w-full flex items-center justify-center px-8 py-3 border border-transparent text-base font-medium rounded-md text-white bg-blue-800 hover:bg-blue-700 md:py-4 md:text-lg md:px-10"> Get started </a>
            </div>
          </div>
        </div>
      </main>
  <% end %>