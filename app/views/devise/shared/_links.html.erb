<%- if controller_name != 'sessions' %>
  <div class="text-sm">
    <%= link_to "Log in", new_session_path(resource_name), class: "font-medium text-blue-600 hover:text-indigo-500" %>
  </div>
<% end %>

<%- if devise_mapping.registerable? && controller_name != 'registrations' %>
  <%= link_to "Sign up", new_registration_path(resource_name), class:"w-full flex items-center justify-center px-8 py-3 border border-transparent text-base font-medium rounded-md text-indigo-700 bg-indigo-100 hover:bg-indigo-200 md:py-4 md:text-lg md:px-10" %><br />
<% end %>

<%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
<div class="text-center text-sm">
  <%= link_to "Forgot your password?", new_password_path(resource_name), class: "font-medium text-blue-600 hover:text-indigo-500" %>
</div>
<% end %>

<%- if devise_mapping.confirmable? && controller_name != 'confirmations' %>
<div class="text-sm">
  <%= link_to "Didn't receive confirmation instructions?", new_confirmation_path(resource_name), class: "font-medium text-indigo-600 hover:text-indigo-500" %>
</div>
<% end %>

<%- if devise_mapping.lockable? && resource_class.unlock_strategy_enabled?(:email) && controller_name != 'unlocks' %>
<div class="text-sm">
  <%= link_to "Didn't receive unlock instructions?", new_unlock_path(resource_name), class: "font-medium text-indigo-600 hover:text-indigo-500" %>
</div>
<% end %>

<%- if devise_mapping.omniauthable? %>
  <%- resource_class.omniauth_providers.each do |provider| %>
    <%= link_to "Sign in with #{OmniAuth::Utils.camelize(provider)}", omniauth_authorize_path(resource_name, provider), method: :post %><br />
  <% end %>
<% end %>
